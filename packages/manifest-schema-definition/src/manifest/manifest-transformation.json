{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "transformation",
  "title": "Transformation",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "alias": {
        "$ref": "alias"
      },
      "type": {
        "type": "string",
        "enum": ["sql"]
      },
      "description": {
        "type": "string",
        "minLength": 3,
        "maxLength": 256
      },
      "query": {
        "type": "string"
      },
      "sequenceNo": {
        "type": "number"
      }
    },
    "required": [
      "alias",
      "type",
      "query"
    ]
  },
  "minItems": 1
}
