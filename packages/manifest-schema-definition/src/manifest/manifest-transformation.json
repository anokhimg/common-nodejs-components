{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "transformation",
  "title": "Transformation",
  "type": "array",
  "items": {
    "oneOf": [
      {
        "type": "object",
        "properties": {
          "alias": { "type": "string", "minLength": 3, "maxLength": 50, "pattern": "^[A-Za-z0-9_]+$" },
          "type": { "type": "string" },
          "description": { "type": "string" },
          "query": { "type": "string" },
          "sequenceNo": { "type": "number" },
          "codeLocation": { "type": "string" }
        },
        "required": ["alias", "type", "query"]
      },
      {
        "type": "object",
        "properties": {
          "stepName": { "type": "string", "minLength": 3, "maxLength": 50, "pattern": "^[A-Za-z0-9_]+$" },
          "type": { "type": "string" },
          "arguments": { "type": "array", "items": { "type": "string" } },
          "pythonFilePath": { "type": "string" },
          "optional": { "type": "object" },
          "sequence": { "type": "number" }
        },
        "required": ["stepName", "type"]
      }
    ]
  },
  "minItems": 1
}
