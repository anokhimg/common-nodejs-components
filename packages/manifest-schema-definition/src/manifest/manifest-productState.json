            "type": "string"
          },
          "minItems": 1
        },
        "encodingOptions": {
          "type": "object",
          "properties": {
            "encodingType": {
              "type": "string",
              "enum": ["HASH", "ENCRYPT"]
            },
            "columnsToEncode": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          }
        },
        "updateStrategyOptions": {
          "type": "object"
        }
