{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "discoveryPort",
  "type": "object",
  "title": "Discovery port",
  "description": "Discovery port information is used to discover the data product",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the data product. The name should be unique within the organization.",
      "minLength": 3,
      "maxLength": 100
    },
    "shortDescription": {
      "type": "string",
      "description": "Short description that describes the products in few words.",
      "minLength": 3,
      "maxLength": 256
    },
    "longDescription": {
      "type": "string",
      "description": "Long Description",
      "maxLength": 5000
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 60
      },
      "maxItems": 10,
      "description": "Tags"
    },
    "dataTimeRange" : {
      "$ref": "dataTimeRange"
    },
    "domain":  {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 60
      },
      "maxItems": 10,
      "description": "industryDomain"
    },
    "function":   {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 60
      },
      "maxItems": 10,
      "description": "function"
    },
    "regulatoryFields": {
      "$ref": "regulatoryFields"
    }
  },
  "required": ["name"]
}
