{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "root",
  "title": "Manifest Schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "enum": ["0.1.0"]
    },
    "alias": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "pattern": "^[A-Za-z0-9_]+$"
    },
    "discoveryPort": {
      "$ref": "discoveryPort"
    },
    "inputPorts": {
      "$ref": "inputPort"
    },
    "transformation": {
      "$ref": "transformation"
    },
    "productState": {
      "$ref": "productState"
    },
    "outputPort": {
      "$ref": "outputPort"
    },
    "controlPort": {
      "$ref": "controlPort"
    }
  },
  "required": [
    "version",
    "discoveryPort",
    "alias"
  ]
}
