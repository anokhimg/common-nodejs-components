{
  "name": "@xsightme/manifest-schema-definition",
  "version": "0.1.0-10",
  "description": "Manifest schema definition",
  "scripts": {
    "build": "npm run generate-types && tsc",
    "generate-types": "ts-node src/generate-types.ts",
    "test": "jest -c jest.config.js",
    "lint": "esw --ext .js,.jsx,.ts,.tsx ./src --color",
    "lint:watch": "esw --ext .js,.jsx,.ts,.tsx ./src --color --watch",
    "lint:fix": "esw --ext .js,.jsx,.ts,.tsx ./src --color --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:XSIGHTME/common-nodejs-components.git"
  },
  "author": "maf",
  "license": "ISC",
  "devDependencies": {
    "@types/lodash": "^4.14.195",
    "@types/node": "^18.11.19",
    "glob": "^7.1.6",
    "glob-promise": "^4.2.2",
    "json-schema-to-typescript": "^13.0.1",
    "ts-node": "^10.9.1"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/manifest/**/*.json"
  ],
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "lodash": "^4.17.21"
  }
